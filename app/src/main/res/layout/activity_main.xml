<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.courtcounter.MainActivity">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/pad_text"
                android:text="@string/team_a"
                android:textSize="@dimen/team_a"
                android:textAppearance="@style/TeamStyle"/>

            <TextView
                android:id="@+id/team_a_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/pad_score"
                android:text="@string/score"
                android:textSize="@dimen/score"
                android:textAppearance="@style/ScoreStyle"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/pad_button_LR"
                android:layout_marginRight="@dimen/pad_button_LR"
                android:layout_marginTop="@dimen/pad_button_TB"
                android:layout_marginBottom="@dimen/pad_button_TB"
                android:onClick="points3"
                android:text="@string/point_3" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/pad_button_LR"
                android:layout_marginRight="@dimen/pad_button_LR"
                android:layout_marginTop="@dimen/pad_button_TB"
                android:layout_marginBottom="@dimen/pad_button_TB"
                android:onClick="points2"
                android:text="@string/point_2" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/pad_button_LR"
                android:layout_marginRight="@dimen/pad_button_LR"
                android:layout_marginTop="@dimen/pad_button_TB"
                android:layout_marginBottom="@dimen/pad_button_TB"
                android:onClick="free"
                android:text="@string/free" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <View
                android:layout_width="1dp"
                android:layout_height="400dp"
                android:background="@android:color/darker_gray"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/pad_text"
                android:text="@string/team_b"
                android:textSize="@dimen/team_a"
                android:textAppearance="@style/TeamStyle"/>

            <TextView
                android:id="@+id/team_b_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/pad_score"
                android:text="@string/score"
                android:textSize="@dimen/score"
                android:textAppearance="@style/ScoreStyle"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/pad_button_LR"
                android:layout_marginRight="@dimen/pad_button_LR"
                android:layout_marginTop="@dimen/pad_button_TB"
                android:layout_marginBottom="@dimen/pad_button_TB"
                android:onClick="points3b"
                android:text="@string/point_3" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/pad_button_LR"
                android:layout_marginRight="@dimen/pad_button_LR"
                android:layout_marginTop="@dimen/pad_button_TB"
                android:layout_marginBottom="@dimen/pad_button_TB"
                android:onClick="points2b"
                android:text="@string/point_2" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/pad_button_LR"
                android:layout_marginRight="@dimen/pad_button_LR"
                android:layout_marginTop="@dimen/pad_button_TB"
                android:layout_marginBottom="@dimen/pad_button_TB"
                android:onClick="freeb"
                android:text="@string/free" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:onClick="resetButton"
        android:layout_marginBottom="@dimen/reset_pad"
        android:text="@string/reset" />
</RelativeLayout>
